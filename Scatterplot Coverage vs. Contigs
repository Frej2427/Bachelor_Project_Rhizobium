#RStudio Script
ggplot(genome_stats, aes(x = Coverage, y = Contigs, label = Assembly)) +
  geom_point(color = "#0073C2FF", size = 3, alpha = 0.8) +
  theme_minimal(base_size = 14) +
  labs(
    title = "Assembly Quality vs. Coverage",
    x = "Coverage (Ã—)",
    y = "Number of Contigs"
  ) + 
  theme(
    plot.title = element_text(hjust = 0.5, face = "bold", size = 18),
    axis.title = element_text(face = "bold"),
    panel.grid.major = element_line(color = "grey80", size = 0.3),
    panel.grid.minor = element_line(color = "grey90", size = 0.2)
  ) +
  scale_x_continuous(breaks = seq(0, max(genome_stats$Coverage) + 10, by = 10)) +
  scale_y_continuous(breaks = seq(0, max(genome_stats$Contigs) + 20, by = 20))
